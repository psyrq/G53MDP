<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.psyrq.RecipeBook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.psyrq.RecipeBook.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.example.psyrq.RecipeBook.RecipeContentProvider"
            android:authorities="com.example.psyrq.myprovider"
            android:exported="true" />

        <activity android:name="com.example.psyrq.RecipeBook.InsertActivity" />
        <activity android:name="com.example.psyrq.RecipeBook.ViewActivity" />
        <activity android:name="com.example.psyrq.RecipeBook.RecipeDetailsActivity"></activity>
    </application>

</manifest>